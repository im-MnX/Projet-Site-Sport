{% extends 'base.html.twig' %}

{% block title %}Panier{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('css/panier.css') }}">
{% endblock %}

{% block body %}
<h1>Votre panier</h1>

{% if produitsPanier is empty %}
    <p>Votre panier est vide.</p>
{% else %}
    <table>
        <thead>
            <tr>
                <th>Produit</th>
                <th>Quantité</th>
                <th>Sous-total</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            {% for item in produitsPanier %}
                <tr>
                    <td>{{ item.produit.nomProduit }}</td>
                    <td>{{ item.quantite }}</td>
                    <td>{{ item.sous_total|number_format(2, ',', ' ') }} €</td>
                    <td>
                        <a href="{{ path('app_panier_supprimer', {'id': item.produit.idProduit}) }}">Supprimer</a>
                    </td>
                </tr>
            {% endfor %}
        </tbody>
    </table>

    <p class="total-panier"><strong>Total :</strong> {{ total|number_format(2, ',', ' ') }} €</p>
{% endif %}
{% endblock %}
