{% extends 'admin_base.html.twig' %}
{% block title %}Gestion des Photos{% endblock %}
{% block page_title %}Photos{% endblock %}
{% block body %}
<div class="card">
    <div class="card-header">
        <h2 class="card-title">Liste des Photos</h2>
        <a href="{{ path('app_admin_photo_new') }}" class="btn btn-primary"><i class="fa-solid fa-plus"></i> Nouvelle Photo</a>
    </div>
    <div class="table-responsive">
        <table class="table">
            <thead>
                <tr><th>Image</th><th>Titre</th><th>Date</th><th>Actions</th></tr>
            </thead>
            <tbody>
            {% for photo in photos %}
                <tr>
                    <td style="width: 80px;">
                        {% if photo.cheminImage %}
                            <img src="{{ asset('photos/album_' ~ photo.idAlbum.idAlbum ~ '/' ~ photo.cheminImage) }}" alt="{{ photo.titre }}" style="width: 50px; height: 50px; object-fit: cover; border-radius: 4px;">
                        {% else %}
                            <span class="badge bg-secondary">No Image</span>
                        {% endif %}
                    </td>
                    <td style="font-weight: 500;">{{ photo.titre }}</td>
                    <td style="color: var(--text-muted);">{{ photo.datePhoto ? photo.datePhoto|date('d/m/Y') : '-' }}</td>
                    <td>
                        <div style="display: flex; gap: 0.5rem;">
                            <a href="{{ path('app_admin_photo_show', {'idPhoto': photo.idPhoto}) }}" class="btn btn-sm btn-info"><i class="fa-solid fa-eye"></i></a>
                            <a href="{{ path('app_admin_photo_edit', {'idPhoto': photo.idPhoto}) }}" class="btn btn-sm btn-warning"><i class="fa-solid fa-pen"></i></a>
                        </div>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="4" style="text-align: center; padding: 2rem;">
                        <div style="color: var(--text-muted); margin-bottom: 1rem;">
                            <i class="fa-regular fa-image" style="font-size: 2rem;"></i>
                            <p style="margin-top: 0.5rem;">Aucune photo trouv√©e</p>
                        </div>
                        <a href="{{ path('app_admin_photo_new') }}" class="btn btn-primary"><i class="fa-solid fa-plus"></i> Ajouter une photo</a>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
</div>
{% endblock %}
