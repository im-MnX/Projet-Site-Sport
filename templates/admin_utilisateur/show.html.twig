{% extends 'admin_base.html.twig' %}
{% block title %}Détails de l'Utilisateur{% endblock %}
{% block page_title %}Détails de l'Utilisateur{% endblock %}
{% block breadcrumb %}<span>Administration</span> / <a href="{{ path('app_admin_utilisateur_index') }}">Utilisateurs</a> / <span>Détails</span>{% endblock %}
{% block body %}
<div class="card" style="max-width: 800px; margin: 0 auto;">
    <div class="card-header">
        <h2 class="card-title">{{ utilisateur.email }}</h2>
        <div style="display: flex; gap: 0.5rem;">
            <a href="{{ path('app_admin_utilisateur_index') }}" class="btn btn-secondary"><i class="fa-solid fa-arrow-left"></i> Retour</a>
            <a href="{{ path('app_admin_utilisateur_edit', {'idUtilisateur': utilisateur.idUtilisateur}) }}" class="btn btn-warning"><i class="fa-solid fa-pen"></i> Modifier</a>
            {{ include('admin_utilisateur/_delete_form.html.twig') }}
        </div>
    </div>
    <table class="table">
        <tbody>
            <tr><th style="width: 30%;">Id</th><td>{{ utilisateur.idUtilisateur }}</td></tr>
            <tr><th>Email</th><td>{{ utilisateur.email }}</td></tr>
            <tr><th>Rôles</th><td>{% for role in utilisateur.roles %}<span style="background-color: var(--secondary-color); color: white; padding: 0.25rem 0.5rem; border-radius: 0.25rem; font-size: 0.75rem; margin-right: 0.25rem;">{{ role }}</span>{% endfor %}</td></tr>
        </tbody>
    </table>
</div>
{% endblock %}
