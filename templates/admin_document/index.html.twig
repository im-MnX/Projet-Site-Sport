{% extends 'admin_base.html.twig' %}

{% block title %}Gestion des Documents{% endblock %}

{% block page_title %}Documents{% endblock %}

{% block body %}
    <div class="card">
        <div class="card-header">
            <h2 class="card-title">Liste des Documents</h2>
            <a href="{{ path('app_admin_document_new') }}" class="btn btn-primary">
                <i class="fa-solid fa-plus"></i> Nouveau Document
            </a>
        </div>

        <div class="table-responsive">
            <table class="table">
                <thead>
                    <tr>
                        <th>Identifiant</th>
                        <th>Titre</th>
                        <th>Fichier</th>
                        <th>Dernière mise à jour</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                {% for document in documents %}
                    <tr>
                        <td><code>{{ document.identifiant }}</code></td>
                        <td><strong>{{ document.titre }}</strong></td>
                        <td>
                            {% if document.filename %}
                                <a href="{{ asset(document.filename) }}" target="_blank" class="btn btn-sm btn-outline-secondary">
                                    <i class="fa-solid fa-file-pdf"></i> Voir le fichier
                                </a>
                            {% else %}
                                <span class="badge bg-danger">Aucun fichier</span>
                            {% endif %}
                        </td>
                        <td style="color: var(--text-muted); font-size: 0.9em;">
                            {{ document.updatedAt ? document.updatedAt|date('d/m/Y H:i') : '-' }}
                        </td>
                        <td>
                            <div style="display: flex; gap: 0.5rem;">
                                <a href="{{ path('app_admin_document_edit', {'id': document.id}) }}" class="btn btn-sm btn-warning" title="Modifier">
                                    <i class="fa-solid fa-pen"></i>
                                </a>
                                {{ include('admin_document/_delete_form.html.twig') }}
                            </div>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="5" style="text-align: center; padding: 2rem;">
                            <div style="color: var(--text-muted); margin-bottom: 1rem;">
                                <i class="fa-solid fa-file-invoice" style="font-size: 2rem;"></i>
                                <p style="margin-top: 0.5rem;">Aucun document trouvé</p>
                            </div>
                            <a href="{{ path('app_admin_document_new') }}" class="btn btn-primary">
                                <i class="fa-solid fa-plus"></i> Ajouter un document
                            </a>
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
{% endblock %}
