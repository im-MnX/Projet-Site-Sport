{% extends 'base.html.twig' %}

{% block title %}Tableau de Bord Admin{% endblock %}

{% block body %}
<div class="container admin-dashboard">
    <h1 class="page-title">Administration</h1>
    
    <div class="dashboard-grid">
        <a href="{{ path('app_admin_actualite_index') }}" class="dashboard-card">
            <div class="card-icon"><i class="fa-solid fa-newspaper"></i></div>
            <h2>Actualités</h2>
            <p>Gérer les news</p>
        </a>

        <a href="{{ path('app_admin_album_index') }}" class="dashboard-card">
            <div class="card-icon"><i class="fa-solid fa-images"></i></div>
            <h2>Albums</h2>
            <p>Gérer les albums photos</p>
        </a>

        <a href="{{ path('app_admin_categorie_album_index') }}" class="dashboard-card">
            <div class="card-icon"><i class="fa-solid fa-tags"></i></div>
            <h2>Catégories d'Albums</h2>
            <p>Gérer les catégories</p>
        </a>

        <a href="{{ path('app_admin_evenement_index') }}" class="dashboard-card">
            <div class="card-icon"><i class="fa-solid fa-calendar-days"></i></div>
            <h2>Événements</h2>
            <p>Gérer les événements</p>
        </a>

        <a href="{{ path('app_admin_photo_index') }}" class="dashboard-card">
            <div class="card-icon"><i class="fa-solid fa-camera"></i></div>
            <h2>Photos</h2>
            <p>Gérer les photos</p>
        </a>

        <a href="{{ path('app_admin_type_evenement_index') }}" class="dashboard-card">
            <div class="card-icon"><i class="fa-solid fa-list-check"></i></div>
            <h2>Types d'Événements</h2>
            <p>Gérer les types</p>
        </a>

        <a href="{{ path('app_admin_utilisateur_index') }}" class="dashboard-card">
            <div class="card-icon"><i class="fa-solid fa-users"></i></div>
            <h2>Utilisateurs</h2>
            <p>Gérer les comptes</p>
        </a>
         <a href="{{ path('app_admin_produit_index') }}" class="dashboard-card">
            <div class="card-icon"><i class="fa-solid fa-box"></i></div>
            <h2>Produits</h2>
            <p>Gérer les produits</p>
        </a>

        <a href="{{ path('app_admin_faq_index') }}" class="dashboard-card">
            <div class="card-icon"><i class="fa-solid fa-circle-question"></i></div>
            <h2>FAQ</h2>
            <p>Gérer les questions/réponses</p>
        </a>

        <a href="{{ path('app_admin_partenaires_index') }}" class="dashboard-card">
            <div class="card-icon"><i class="fa-solid fa-handshake"></i></div>
            <h2>Partenaires</h2>
            <p>Gérer les partenaires</p>
        </a>
        
    </div>
</div>

<style>
/* Dashboard Styles - Inlined for now, should move to CSS file later */
.admin-dashboard {
    padding: 2rem;
    max-width: 1200px;
    margin: 0 auto;
}

.page-title {
    text-align: center;
    margin-bottom: 3rem;
    color: #333;
    font-size: 2.5rem;
}

.dashboard-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: 2rem;
    justify-content: center;
}

.dashboard-card {
    background: white;
    border-radius: 15px;
    padding: 2rem;
    text-align: center;
    box-shadow: 0 4px 6px rgba(0,0,0,0.1);
    transition: transform 0.3s ease, box-shadow 0.3s ease;
    text-decoration: none;
    color: inherit;
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 1rem;
}

.dashboard-card:hover {
    transform: translateY(-5px);
    box-shadow: 0 10px 20px rgba(0,0,0,0.15);
    color: inherit; /* Prevent link color change on hover if desired */
}

.card-icon {
    font-size: 3rem;
    color: #007bff; /* Example primary color, adjust to theme */
    margin-bottom: 0.5rem;
}

.dashboard-card h2 {
    margin: 0;
    font-size: 1.5rem;
    color: #333;
}

.dashboard-card p {
    margin: 0;
    color: #666;
    font-size: 0.9rem;
}
</style>
{% endblock %}
