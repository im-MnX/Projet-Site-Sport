{% extends 'admin_base.html.twig' %}

{% block title %}Tableau de Bord Admin
{% endblock %}
{% block page_title %}Dashboard
{% endblock %}
{% block breadcrumb %}
	<span>Administration</span>
	/
	<span>Dashboard</span>
{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('css/admin-dashboard.css') }}">
{% endblock %}

{% block body %}

	<div
		class="admin-dashboard-modern">
		{# Welcome Banner #}
		<div class="welcome-banner">
			<div class="welcome-content">
				<h1>
					<i class="fa-solid fa-gauge-high"></i>
					Tableau de Bord</h1>
				<p>Bienvenue dans l'espace d'administration</p>
			</div>
			<div class="welcome-icon">
				<i class="fa-solid fa-chart-line"></i>
			</div>
		</div>

		{# Content Management Section #}
		<div class="section-header">
			<i class="fa-solid fa-newspaper"></i>
			<h2>Gestion du Contenu</h2>
		</div>
		<div class="dashboard-grid">
			<a href="{{ path('app_admin_actualite_index') }}" class="modern-card gradient-blue">
				<div class="card-icon">
					<i class="fa-solid fa-newspaper"></i>
				</div>
				<div class="card-content">
					<h3>Actualités</h3>
					<p>Gérer les news du site</p>
				</div>
				<div class="card-arrow">
					<i class="fa-solid fa-arrow-right"></i>
				</div>
			</a>
			<a href="{{ path('app_admin_type_evenement_index') }}" class="modern-card gradient-indigo">
				<div class="card-icon">
					<i class="fa-solid fa-tag"></i>
				</div>
				<div class="card-content">
					<h3>Types d'événements</h3>
					<p>Catégories d'événements</p>
				</div>
				<div class="card-arrow">
					<i class="fa-solid fa-arrow-right"></i>
				</div>
			</a>
			<a href="{{ path('app_admin_evenement_index') }}" class="modern-card gradient-purple">
				<div class="card-icon">
					<i class="fa-solid fa-calendar-days"></i>
				</div>
				<div class="card-content">
					<h3>Événements</h3>
					<p>Calendrier et événements</p>
				</div>
				<div class="card-arrow">
					<i class="fa-solid fa-arrow-right"></i>
				</div>
			</a>
			<a href="{{ path('app_admin_document_index') }}" class="modern-card gradient-red">
				<div class="card-icon">
					<i class="fa-solid fa-file-invoice"></i>
				</div>
				<div class="card-content">
					<h3>Documents</h3>
					<p>Gestion des fichiers</p>
				</div>
				<div class="card-arrow">
					<i class="fa-solid fa-arrow-right"></i>
				</div>
			</a>
		</div>

		{# Media Management Section #}
		<div class="section-header">
			<i class="fa-solid fa-images"></i>
			<h2>Gestion des Médias</h2>
		</div>
		<div class="dashboard-grid">

			<a href="{{ path('app_admin_categorie_album_index') }}" class="modern-card gradient-teal">
				<div class="card-icon">
					<i class="fa-solid fa-folder-open"></i>
				</div>
				<div class="card-content">
					<h3>Catégories</h3>
					<p>Catégories d'albums</p>
				</div>
				<div class="card-arrow">
					<i class="fa-solid fa-arrow-right"></i>
				</div>
			</a>
			<a href="{{ path('app_admin_album_index') }}" class="modern-card gradient-orange">
				<div class="card-icon">
					<i class="fa-solid fa-images"></i>
				</div>
				<div class="card-content">
					<h3>Albums</h3>
					<p>Collections de photos</p>
				</div>
				<div class="card-arrow">
					<i class="fa-solid fa-arrow-right"></i>
				</div>
			</a>

			<a href="{{ path('app_admin_photo_index') }}" class="modern-card gradient-pink">
				<div class="card-icon">
					<i class="fa-solid fa-camera"></i>
				</div>
				<div class="card-content">
					<h3>Photos</h3>
					<p>Bibliothèque de photos</p>
				</div>
				<div class="card-arrow">
					<i class="fa-solid fa-arrow-right"></i>
				</div>
			</a>


		</div>

		{# Configuration Section #}
		<div class="section-header">
			<i class="fa-solid fa-sliders"></i>
			<h2>Configuration</h2>
		</div>
		<div class="dashboard-grid">
			<a href="{{ path('app_admin_produit_index') }}" class="modern-card gradient-green">
				<div class="card-icon">
					<i class="fa-solid fa-box"></i>
				</div>
				<div class="card-content">
					<h3>Produits</h3>
					<p>Boutique et produits</p>
				</div>
				<div class="card-arrow">
					<i class="fa-solid fa-arrow-right"></i>
				</div>
			</a>

			<a href="{{ path('app_admin_utilisateur_index') }}" class="modern-card gradient-red">
				<div class="card-icon">
					<i class="fa-solid fa-users"></i>
				</div>
				<div class="card-content">
					<h3>Utilisateurs</h3>
					<p>Gestion des comptes</p>
				</div>
				<div class="card-arrow">
					<i class="fa-solid fa-arrow-right"></i>
				</div>

			</a>

			<a href="{{ path('app_admin_faq_index') }}" class="modern-card gradient-cyan">
				<div class="card-icon">
					<i class="fa-solid fa-circle-question"></i>
				</div>
				<div class="card-content">
					<h3>FAQ</h3>
					<p>Gérer les questions/réponses</p>
				</div>
				<div class="card-arrow">
					<i class="fa-solid fa-arrow-right"></i>
				</div>
			</a>

			<a href="{{ path('app_admin_partenaires_index') }}" class="modern-card gradient-yellow">
				<div class="card-icon">
					<i class="fa-solid fa-handshake"></i>
				</div>
				<div class="card-content">
					<h3>Partenaires</h3>
					<p>Gérer les partenaires</p>
				</div>
				<div class="card-arrow">
					<i class="fa-solid fa-arrow-right"></i>
				</div>
			</a>
		</div>

</div>


