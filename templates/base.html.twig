<!DOCTYPE html>
<html>
	<head>
		<meta charset="UTF-8">
		<title>
			{% block title %}{% endblock %}
		</title>

		{% block stylesheets %}
			<link rel="stylesheet" href="{{ asset('css/style.css') }}">
            <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
		{% endblock %}

		{% block javascripts %}
			{% block importmap %}
				{{ importmap('app') }}
			{% endblock %}
			<script src="{{ asset('js/dropdowns.js') }}"></script>
		{% endblock %}
	</head>
	<body>
		<header class="navbar">
			<nav class="nav-menu" role="navigation" aria-label="Main navigation">
				<div class="nav-left">
					<div class="nav-item dropdown" data-dropdown>
						<button class="dropdown-toggle" aria-haspopup="true" aria-expanded="false">
							Le Club <span class="chevron">⌄</span>
						</button>
						<div class="dropdown-menu" role="menu">
							<a class="dropdown-item" href="#">Présentations du club</a>
							<a class="dropdown-item" href="#">Événements</a>
							<a class="dropdown-item" href="#">Actualités</a>
							<a class="dropdown-item" href="#">Inscriptions au club</a>
							<a class="dropdown-item" href="#">Inscriptions aux événements</a>
						</div>
					</div>

					<div class="nav-item dropdown" data-dropdown>
						<button class="dropdown-toggle" aria-haspopup="true" aria-expanded="false">
							Galerie <span class="chevron">⌄</span>
						</button>
						<div class="dropdown-menu" role="menu">
							<a class="dropdown-item" href="#">Albums photos</a>
							<a class="dropdown-item" href="#">Galerie vidéos</a>
						</div>
					</div>
				</div>

				<a href="{{ path('home') }}"><img src="{{ asset('images/Logo_60ans.png') }}" alt="logo" class="logo"></a>

				<div class="nav-right">
                    <div class="nav-links">
					    <a class="nav-item" href="#">Boutique en ligne</a>
					    <a class="nav-item" href="#">FAQ</a>
                    </div>
				</div>

                {% if app.user %}
                    <a class="nav-item logout-btn" href="{{ path('app_logout') }}" title="Déconnexion">
                        <i class="fa-solid fa-power-off"></i>
                    </a>
                {% endif %}
			</nav>
		</header>

		{% block body %}{% endblock %}

		{% include 'partials/footer.html.twig' %}

	</body>
</html>