<!DOCTYPE html>
<html>
	<head>
		<meta charset="UTF-8">
		<meta name="viewport" content="width=device-width, initial-scale=1.0">
		<title>
			{% block title %}{% endblock %}
		</title>

		{% block stylesheets %}
			<link rel="stylesheet" href="{{ asset('css/style.css') }}">
			<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
			<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
		{% endblock %}

		{% block javascripts %}
			{% block importmap %}
				{{ importmap('app') }}
			{% endblock %}

		{% endblock %}
	</head>
	<body>
		<header class="site-header">
			<nav class="site-nav" role="navigation" aria-label="Main navigation">
				<div class="nav-group-left">
					<div class="site-dropdown" data-dropdown>
						<button class="nav-dropdown-toggle" aria-haspopup="true" aria-expanded="false">
							Le Club
							<i class="fas fa-chevron-down site-chevron"></i>
						</button>
						<div class="nav-dropdown-card" role="menu">
							<a class="nav-dropdown-link" href="{{ path('app_about') }}">Présentations du club</a>
							<a class="nav-dropdown-link" href="{{ path('app_evenement') }}">Événements</a>
							<a class="nav-dropdown-link" href="{{ path('app_actualites') }}">Actualités</a>
							<a class="nav-dropdown-link" href="{{ asset(get_document_path('PLANNING_COURS')|default('PlanningCours/PlanningCours.pdf')) }}" target="_blank">Planning des cours</a>
							<a class="nav-dropdown-link" href="{{ asset(get_document_path('PLANNING_COMPETITIONS')|default('PlanningCompetitions/PlanningCompetitions.pdf')) }}" target="_blank">Planning des compétitions</a>
							<a class="nav-dropdown-link" href="{{ path('app_resultats') }}">Résultats</a>
						</div>
					</div>

					<div class="site-dropdown" data-dropdown>
						<button class="nav-dropdown-toggle" aria-haspopup="true" aria-expanded="false">
							Inscriptions
							<i class="fas fa-chevron-down site-chevron"></i>
						</button>
						<div class="nav-dropdown-card" role="menu">
							<a class="nav-dropdown-link" href="{{ path('app_inscription') }}">Inscriptions annuelles</a>
							<a class="nav-dropdown-link" href="#">Inscriptions aux événements</a>
						</div>
					</div>
				</div>

				<a href="{{ path('home') }}"><img src="{{ asset('images/Logo_60ans.png') }}" alt="logo" class="site-logo"></a>

				<div class="nav-group-right">
					<div class="nav-link-group">
						<a class="nav-link-item" href="{{ path('album_show') }}">Galerie</a>
						<a class="nav-link-item" href="{{ path('app_boutique') }}">Boutique</a>
					</div>
				</div>

				{% if app.user %}
					{% if is_granted('ROLE_ADMIN') %}
						<a class="nav-link-item" href="{{ path('app_admin_dashboard') }}" title="Administration">
							<i class="fa-solid fa-screwdriver-wrench"></i>
						</a>
					{% endif %}
					<a class="nav-link-item site-logout-btn" href="{{ path('app_logout') }}" title="Déconnexion">
						<i class="fa-solid fa-power-off"></i>
					</a>
				{% else %}
					<a class="nav-link-item" href="{{ path('app_login') }}" title="Connexion">
						<i class="fa-solid fa-user"></i>
					</a>
				{% endif %}
			</nav>
			{# Afficher le panier uniquement si on est sur la page boutique ou panier #}
			{% if app.request.get('_route') == 'app_boutique' or app.request.get('_route') == 'app_panier' %}
				<div class="header-utility-top">
					<a href="{{ path('app_panier') }}" class="panier-indicator">
						Panier
						{% set totalCount = 0 %}
						{% for quantite in app.session.get('panier')|default([]) %}
							{% set totalCount = totalCount + quantite %}
						{% endfor %}
						{% if totalCount > 0 %}
							<span class="panier-badge">{{ totalCount }}</span>
						{% endif %}
					</a>
				</div>
			{% endif %}

		</header>
		{% block body %}{% endblock %}

		{% include 'partials/footer.html.twig' %}

		<script>
			// Burger menu toggle
			(function() {
				const burger = document.getElementById('burgerToggle');
				const navLeft = document.getElementById('navLeft');
				const navRight = document.getElementById('navRight');

				if (burger) {
					burger.addEventListener('click', function() {
						const isOpen = burger.classList.toggle('active');
						navLeft.classList.toggle('mobile-open');
						navRight.classList.toggle('mobile-open');
						burger.setAttribute('aria-expanded', isOpen);

						// Close all dropdowns when closing burger menu
						if (!isOpen) {
							document.querySelectorAll('.nav-item[data-dropdown]').forEach(function(d) {
								d.classList.remove('dropdown-open');
							});
						}
					});

					// Close menu when clicking a dropdown-item link (actual page navigation)
					document.querySelectorAll('.nav-left .dropdown-item, .nav-right .nav-item').forEach(function(link) {
						link.addEventListener('click', function() {
							if (window.innerWidth <= 768) {
								burger.classList.remove('active');
								navLeft.classList.remove('mobile-open');
								navRight.classList.remove('mobile-open');
								burger.setAttribute('aria-expanded', 'false');
							}
						});
					});
				}

				// Mobile dropdown toggle (click instead of hover)
				document.querySelectorAll('.nav-item[data-dropdown] > .dropdown-toggle').forEach(function(toggle) {
					toggle.addEventListener('click', function(e) {
						if (window.innerWidth <= 768) {
							e.preventDefault();
							e.stopPropagation();
							const parent = toggle.closest('.nav-item[data-dropdown]');
							// Close other dropdowns
							document.querySelectorAll('.nav-item[data-dropdown]').forEach(function(d) {
								if (d !== parent) d.classList.remove('dropdown-open');
							});
							parent.classList.toggle('dropdown-open');
						}
					});
				});
			})();
		</script>

	</body>
</html>

