{% extends 'admin_base.html.twig' %}

{% block title %}Gestion des Albums{% endblock %}

{% block page_title %}Albums{% endblock %}

{% block body %}
    <div class="card">
        <div class="card-header">
            <h2 class="card-title">Liste des Albums</h2>
            <a href="{{ path('app_admin_album_new') }}" class="btn btn-primary">
                <i class="fa-solid fa-plus"></i> Nouvel Album
            </a>
        </div>

        <div class="table-responsive">
            <table class="table">
                <thead>
                    <tr>
                        <th>Description</th>
                        <th>Priorité</th>
                        <th>Archivé</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                {% for album in albums %}
                    <tr>
                        <td style="font-weight: 500;">{{ album.description }}</td>
                        <td>{{ album.priorite }}</td>
                        <td>
                            {% if album.archive %}
                                <span style="background-color: var(--secondary-color); color: white; padding: 0.25rem 0.5rem; border-radius: 0.25rem; font-size: 0.75rem;">Archivé</span>
                            {% else %}
                                <span style="background-color: var(--success-color); color: white; padding: 0.25rem 0.5rem; border-radius: 0.25rem; font-size: 0.75rem;">Actif</span>
                            {% endif %}
                        </td>
                        <td>
                            <div style="display: flex; gap: 0.5rem;">
                                <a href="{{ path('app_admin_album_show', {'idAlbum': album.idAlbum}) }}" class="btn btn-sm btn-info" title="Voir">
                                    <i class="fa-solid fa-eye"></i>
                                </a>
                                <a href="{{ path('app_admin_album_edit', {'idAlbum': album.idAlbum}) }}" class="btn btn-sm btn-warning" title="Modifier">
                                    <i class="fa-solid fa-pen"></i>
                                </a>
                            </div>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="4" style="text-align: center; padding: 2rem;">
                            <div style="color: var(--text-muted); margin-bottom: 1rem;">
                                <i class="fa-regular fa-images" style="font-size: 2rem;"></i>
                                <p style="margin-top: 0.5rem;">Aucun album trouvé</p>
                            </div>
                            <a href="{{ path('app_admin_album_new') }}" class="btn btn-primary">
                                <i class="fa-solid fa-plus"></i> Créer un album
                            </a>
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
{% endblock %}
