{% extends 'admin_base.html.twig' %}
{% block title %}Détails de la Catégorie{% endblock %}
{% block page_title %}Détails de la Catégorie{% endblock %}
{% block breadcrumb %}<span>Administration</span> / <a href="{{ path('app_admin_categorie_album_index') }}">Catégories</a> / <span>Détails</span>{% endblock %}
{% block body %}
<div class="card" style="max-width: 800px; margin: 0 auto;">
    <div class="card-header">
        <h2 class="card-title">{{ categorie_album.libelleCategorieAlbum }}</h2>
        <div style="display: flex; gap: 0.5rem;">
            <a href="{{ path('app_admin_categorie_album_index') }}" class="btn btn-secondary"><i class="fa-solid fa-arrow-left"></i> Retour</a>
            <a href="{{ path('app_admin_categorie_album_edit', {'idCategorieAlbum': categorie_album.idCategorieAlbum}) }}" class="btn btn-warning"><i class="fa-solid fa-pen"></i> Modifier</a>
            {{ include('admin_categorie_album/_delete_form.html.twig') }}
        </div>
    </div>
    <table class="table">
        <tbody>
            <tr><th style="width: 30%;">Id</th><td>{{ categorie_album.idCategorieAlbum }}</td></tr>
            <tr><th>Nom</th><td>{{ categorie_album.libelleCategorieAlbum }}</td></tr>
        </tbody>
    </table>
</div>
{% endblock %}
