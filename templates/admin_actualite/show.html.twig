{% extends 'admin_base.html.twig' %}

{% block title %}Détails de l'actualité{% endblock %}

{% block page_title %}Détails de l'actualité{% endblock %}

{% block breadcrumb %}
    <span>Administration</span> / <a href="{{ path('app_admin_actualite_index') }}">Actualités</a> / <span>Détails</span>
{% endblock %}

{% block body %}
    <div class="card" style="max-width: 800px; margin: 0 auto;">
        <div class="card-header">
            <h2 class="card-title">{{ actualite.titre }}</h2>
            <div style="display: flex; gap: 0.5rem;">
                <a href="{{ path('app_admin_actualite_index') }}" class="btn btn-secondary">
                    <i class="fa-solid fa-arrow-left"></i> Retour
                </a>
                <a href="{{ path('app_admin_actualite_edit', {'idActualite': actualite.idActualite}) }}" class="btn btn-warning">
                    <i class="fa-solid fa-pen"></i> Modifier
                </a>
                {{ include('admin_actualite/_delete_form.html.twig') }}
            </div>
        </div>

        <div style="display: grid; grid-template-columns: 1fr 2fr; gap: 2rem;">
            <div>
                {% if actualite.images %}
                    <img src="{{ asset('uploads/actualites/' ~ actualite.images) }}" alt="{{ actualite.titre }}" style="width: 100%; border-radius: 0.5rem; object-fit: cover;">
                {% else %}
                    <div style="background-color: #f1f5f9; width: 100%; height: 200px; display: flex; align-items: center; justify-content: center; border-radius: 0.5rem; color: #64748b;">
                        No Image
                    </div>
                {% endif %}
            </div>

            <table class="table">
                <tbody>
                    <tr>
                        <th style="width: 30%;">Id</th>
                        <td>{{ actualite.idActualite }}</td>
                    </tr>
                    <tr>
                        <th>Titre</th>
                        <td>{{ actualite.titre }}</td>
                    </tr>
                    <tr>
                        <th>Date</th>
                        <td>{{ actualite.date ? actualite.date|date('d/m/Y') : '' }}</td>
                    </tr>
                    <tr>
                        <th>Description</th>
                        <td style="color: var(--text-muted); line-height: 1.6;">{{ actualite.description }}</td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
{% endblock %}
