{% extends 'base.html.twig' %}

{% block title %}Actualite index{% endblock %}

{% block body %}
    <h1>Actualite index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>IdActualite</th>
                <th>Titre</th>
                <th>Date</th>
                <th>Images</th>
                <th>Description</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for actualite in actualites %}
            <tr>
                <td>{{ actualite.idActualite }}</td>
                <td>{{ actualite.titre }}</td>
                <td>{{ actualite.date ? actualite.date|date('Y-m-d') : '' }}</td>
                <td>{{ actualite.images }}</td>
                <td>{{ actualite.description }}</td>
                <td>
                    <a href="{{ path('app_admin_actualite_show', {'idActualite': actualite.idActualite}) }}">show</a>
                    <a href="{{ path('app_admin_actualite_edit', {'idActualite': actualite.idActualite}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_admin_actualite_new') }}">Create new</a>
{% endblock %}
