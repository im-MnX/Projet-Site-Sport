{% extends 'admin_base.html.twig' %}

{% block title %}Gestion des Actualités{% endblock %}

{% block page_title %}Actualités{% endblock %}

{% block body %}
    <div class="card">
        <div class="card-header">
            <h2 class="card-title">Liste des Actualités</h2>
            <a href="{{ path('app_admin_actualite_new') }}" class="btn btn-primary">
                <i class="fa-solid fa-plus"></i> Nouvelle Actualité
            </a>
        </div>

        <div class="table-responsive">
            <table class="table">
                <thead>
                    <tr>
                        <th>Image</th>
                        <th>Titre</th>
                        <th>Date</th>
                        <th>Description</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                {% for actualite in actualites %}
                    <tr>
                        <td style="width: 80px;">
                            {% if actualite.images %}
                                <img src="{{ asset('uploads/actualites/' ~ actualite.images) }}" alt="{{ actualite.titre }}" style="width: 50px; height: 50px; object-fit: cover; border-radius: 4px;">
                            {% else %}
                                <span class="badge bg-secondary">No Image</span>
                            {% endif %}
                        </td>
                        <td>
                            <div style="font-weight: 500;">{{ actualite.titre }}</div>
                        </td>
                        <td style="color: var(--text-muted); font-size: 0.9em;">
                            {{ actualite.date ? actualite.date|date('d/m/Y') : '-' }}
                        </td>
                        <td>
                            <small style="color: var(--text-muted);">{{ actualite.description|slice(0, 50) }}...</small>
                        </td>
                        <td>
                            <div style="display: flex; gap: 0.5rem;">
                                <a href="{{ path('app_admin_actualite_show', {'idActualite': actualite.idActualite}) }}" class="btn btn-sm btn-info" title="Voir">
                                    <i class="fa-solid fa-eye"></i>
                                </a>
                                <a href="{{ path('app_admin_actualite_edit', {'idActualite': actualite.idActualite}) }}" class="btn btn-sm btn-warning" title="Modifier">
                                    <i class="fa-solid fa-pen"></i>
                                </a>
                            </div>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="5" style="text-align: center; padding: 2rem;">
                            <div style="color: var(--text-muted); margin-bottom: 1rem;">
                                <i class="fa-regular fa-newspaper" style="font-size: 2rem;"></i>
                                <p style="margin-top: 0.5rem;">Aucune actualité trouvée</p>
                            </div>
                            <a href="{{ path('app_admin_actualite_new') }}" class="btn btn-primary">
                                <i class="fa-solid fa-plus"></i> Créer une actualité
                            </a>
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
{% endblock %}
