{% extends 'admin_base.html.twig' %}
{% block title %}Gestion des Types d'Événements{% endblock %}
{% block page_title %}Types d'Événements{% endblock %}
{% block body %}
<div class="card">
    <div class="card-header">
        <h2 class="card-title">Liste des Types d'Événements</h2>
        <a href="{{ path('app_admin_type_evenement_new') }}" class="btn btn-primary"><i class="fa-solid fa-plus"></i> Nouveau Type</a>
    </div>
    <div class="table-responsive">
        <table class="table">
            <thead>
                <tr><th>Nom</th><th>Actions</th></tr>
            </thead>
            <tbody>
            {% for typeEvenement in type_evenements %}
                <tr>
                    <td style="font-weight: 500;">{{ typeEvenement.nomType }}</td>
                    <td>
                        <div style="display: flex; gap: 0.5rem;">
                            <a href="{{ path('app_admin_type_evenement_show', {'idTypeEvenement': typeEvenement.idTypeEvenement}) }}" class="btn btn-sm btn-info"><i class="fa-solid fa-eye"></i></a>
                            <a href="{{ path('app_admin_type_evenement_edit', {'idTypeEvenement': typeEvenement.idTypeEvenement}) }}" class="btn btn-sm btn-warning"><i class="fa-solid fa-pen"></i></a>
                        </div>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="2" style="text-align: center; padding: 2rem;">
                        <div style="color: var(--text-muted); margin-bottom: 1rem;">
                            <i class="fa-solid fa-tag" style="font-size: 2rem;"></i>
                            <p style="margin-top: 0.5rem;">Aucun type trouvé</p>
                        </div>
                        <a href="{{ path('app_admin_type_evenement_new') }}" class="btn btn-primary"><i class="fa-solid fa-plus"></i> Créer un type</a>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
</div>
{% endblock %}
