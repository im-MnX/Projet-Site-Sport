{% extends 'admin_base.html.twig' %}

{% block title %}Détails du Produit{% endblock %}

{% block page_title %}Détails du Produit{% endblock %}

{% block breadcrumb %}
    <span>Administration</span> / <a href="{{ path('app_admin_produit_index') }}">Produits</a> / <span>Détails</span>
{% endblock %}

{% block body %}
    <div class="card" style="max-width: 800px; margin: 0 auto;">
        <div class="card-header">
            <h2 class="card-title">{{ produit.nomProduit }}</h2>
            <div style="display: flex; gap: 0.5rem;">
                <a href="{{ path('app_admin_produit_index') }}" class="btn btn-secondary">
                    <i class="fa-solid fa-arrow-left"></i> Retour
                </a>
                <a href="{{ path('app_admin_produit_edit', {'idProduit': produit.idProduit}) }}" class="btn btn-warning">
                    <i class="fa-solid fa-pen"></i> Modifier
                </a>
                {{ include('admin_produit/_delete_form.html.twig') }}
            </div>
        </div>

        <div style="display: grid; grid-template-columns: 1fr 2fr; gap: 2rem;">
            <div>
                {% if produit.image %}
                    <img src="{{ asset(produit.image) }}" alt="{{ produit.nomProduit }}" style="width: 100%; border-radius: 0.5rem; object-fit: cover;">
                {% else %}
                    <div style="background-color: #f1f5f9; width: 100%; height: 200px; display: flex; align-items: center; justify-content: center; border-radius: 0.5rem; color: #64748b;">
                        No Image
                    </div>
                {% endif %}
            </div>
            
            <table class="table">
                <tbody>
                    <tr>
                        <th style="width: 30%;">Id</th>
                        <td>{{ produit.idProduit }}</td>
                    </tr>
                    <tr>
                        <th>Nom</th>
                        <td>{{ produit.nomProduit }}</td>
                    </tr>
                    <tr>
                        <th>Prix</th>
                        <td style="font-size: 1.25rem; font-weight: 600; color: var(--primary-color);">{{ produit.prix }} €</td>
                    </tr>
                    <tr>
                        <th>Stock</th>
                        <td>
                            {% if produit.stock > 10 %}
                                <span class="badge" style="background-color: var(--success-color); color: white; padding: 0.25rem 0.5rem; border-radius: 0.25rem;">{{ produit.stock }} en stock</span>
                            {% elseif produit.stock > 0 %}
                                <span class="badge" style="background-color: var(--warning-color); color: white; padding: 0.25rem 0.5rem; border-radius: 0.25rem;">{{ produit.stock }} restants</span>
                            {% else %}
                                <span class="badge" style="background-color: var(--danger-color); color: white; padding: 0.25rem 0.5rem; border-radius: 0.25rem;">Rupture</span>
                            {% endif %}
                        </td>
                    </tr>
                    <tr>
                        <th>Description</th>
                        <td style="color: var(--text-muted); line-height: 1.6;">{{ produit.description }}</td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
{% endblock %}
