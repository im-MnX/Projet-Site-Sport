{% extends 'base.html.twig' %}

{% block title %}Actualités
{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('css/actualites.css') }}">
{% endblock %}




{% block body %}
	<div class="page-container">
		<h1>Actualités</h1>
		<div class="actualites-container">
			{% for actualite in actualites %}
					<article class="modern-card">
                        <div class="card-image-wrapper">
                            <!-- Placeholder ou image réelle si dispo -->
                            <div class="card-placeholder-img">
                            <img src="{{ asset('uploads/actualites/' ~ actualite.images) }}" alt="{{ actualite.titre }}" class="actualite-image">
                            </div>
                        </div>
						<div class="card-body">
                            <span class="card-date">{{ actualite.date ? actualite.date|date('d/m/Y') : '' }}</span>
                            <h3 class="card-title">{{ actualite.titre ?: 'Actualité' }}</h3>
                            <p class="card-excerpt">{{ actualite.description|striptags|slice(0, 100) ~ '...' }}</p>
                            <a href="{{ path('app_actualites_show', { id: actualite.idActualite }) }}" class="read-more">Lire la suite <i class="fas fa-arrow-right"></i></a>
                        </div>
					</article>
			{% else %}
				<div class="empty-shop" style="grid-column: 1 / -1;">
					<i class="bi bi-newspaper" style="font-size: 3rem; margin-bottom: 20px; color: #ccc;"></i>
					<h3>Aucune actualité disponible pour le moment</h3>
				</div>
			{% endfor %}
		</div>
	</div>
{% endblock %}
