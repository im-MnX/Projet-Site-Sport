<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>Créer un compte</title>
    <link rel="stylesheet" href="{{ asset('css/login.css') }}">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
</head>
<body>
<div class="login-container">
    <div class="login-card">
        <div class="login-logo-container">
            <img src="{{ asset('images/Logo_60ans.png') }}" alt="Angers Nat Synchro" class="login-logo">
        </div>
        <h1 class="login-title">Créer un compte</h1>

        {{ form_start(registrationForm, {'attr': {'class': 'login-form'}}) }}
            
            {% for message in app.flashes('error') %}
                <div class="login-alert">{{ message }}</div>
            {% endfor %}

            <div class="form-group">
                {{ form_label(registrationForm.email, 'Email') }}
                {{ form_widget(registrationForm.email, {'attr': {'class': 'login-input'}}) }}
                {{ form_errors(registrationForm.email) }}
            </div>

            <div class="form-group">
                {{ form_label(registrationForm.password.first, 'Mot de passe') }}
                {{ form_widget(registrationForm.password.first, {'attr': {'class': 'login-input'}}) }}
                {{ form_errors(registrationForm.password.first) }}
            </div>

            <div class="form-group">
                {{ form_label(registrationForm.password.second, 'Confirmer le mot de passe') }}
                {{ form_widget(registrationForm.password.second, {'attr': {'class': 'login-input'}}) }}
                {{ form_errors(registrationForm.password.second) }}
            </div>

            <button class="login-btn" type="submit">
                Créer mon compte
            </button>

            <div style="text-align: center; margin-top: 1rem;">
                <a href="{{ path('app_login') }}" style="color: rgba(255, 255, 255, 0.8); text-decoration: none;">
                    Déjà un compte ? Se connecter
                </a>
            </div>
        {{ form_end(registrationForm) }}
    </div>
</div>
</body>
</html>
