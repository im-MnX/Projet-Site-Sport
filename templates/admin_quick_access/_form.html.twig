{{ form_start(form, {'attr': {'novalidate': 'novalidate'}}) }}

<div class="form-group" style="margin-bottom: 1.25rem;">
    {{ form_label(form.titre) }}
    {{ form_widget(form.titre, {'attr': {'class': 'form-control'}}) }}
    {{ form_errors(form.titre) }}
</div>

<div class="form-group" style="margin-bottom: 1.25rem;">
    {{ form_label(form.icone) }}
    <div style="display: flex; gap: 0.75rem; align-items: center;">
        {{ form_widget(form.icone, {'attr': {'class': 'form-control', 'id': 'icone_input'}}) }}
        <span id="icone_preview" style="font-size: 1.5rem; min-width: 2rem; text-align: center;">
            <i class="{{ quick_access.icone }}"></i>
        </span>
    </div>
    {{ form_help(form.icone) }}
    {{ form_errors(form.icone) }}
</div>

<div class="form-group" style="margin-bottom: 1.25rem;">
    {{ form_label(form.lien) }}
    {{ form_widget(form.lien, {'attr': {'class': 'form-control'}}) }}
    {{ form_help(form.lien) }}
    {{ form_errors(form.lien) }}
</div>

<div class="form-group" style="margin-bottom: 1.25rem;">
    {{ form_label(form.document) }}
    {{ form_widget(form.document, {'attr': {'class': 'form-control'}}) }}
    {{ form_help(form.document) }}
    {{ form_errors(form.document) }}
</div>

<div class="form-group" style="margin-bottom: 1.25rem;">
    {{ form_label(form.position) }}
    {{ form_widget(form.position, {'attr': {'class': 'form-control'}}) }}
    {{ form_errors(form.position) }}
</div>

<div style="margin-top: 1.5rem; display: flex; gap: 1rem;">
    <button type="submit" class="btn btn-primary">
        <i class="fa-solid fa-floppy-disk"></i> Enregistrer
    </button>
    <a href="{{ path('app_admin_quick_access_index') }}" class="btn btn-secondary">
        <i class="fa-solid fa-arrow-left"></i> Annuler
    </a>
</div>

{{ form_end(form) }}

<script>
document.addEventListener('DOMContentLoaded', function () {
    const input = document.getElementById('icone_input');
    const preview = document.getElementById('icone_preview');
    if (input && preview) {
        input.addEventListener('input', function () {
            preview.innerHTML = '<i class="' + this.value + '"></i>';
        });
    }
});
</script>
