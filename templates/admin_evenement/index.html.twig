{% extends 'admin_base.html.twig' %}
{% block title %}Gestion des Événements{% endblock %}
{% block page_title %}Événements{% endblock %}
{% block body %}
<div class="card">
    <div class="card-header">
        <h2 class="card-title">Liste des Événements</h2>
        <a href="{{ path('app_admin_evenement_new') }}" class="btn btn-primary"><i class="fa-solid fa-plus"></i> Nouvel Événement</a>
    </div>
    <div class="table-responsive">
        <table class="table">
            <thead>
                <tr><th>Image</th><th>Nom</th><th>Date</th><th>Horaire</th><th>Actions</th></tr>
            </thead>
            <tbody>
            {% for evenement in evenements %}
                <tr>
                    <td style="width: 80px;">
                        {% if evenement.images %}
                            <img src="{{ asset(evenement.images) }}" alt="{{ evenement.nom }}" style="width: 50px; height: 50px; object-fit: cover; border-radius: 4px;">
                        {% else %}
                            <span class="badge bg-secondary">No Image</span>
                        {% endif %}
                    </td>
                    <td>
                        <div style="font-weight: 500;">{{ evenement.nom }}</div>
                        <small style="color: var(--text-muted);">{{ evenement.description|slice(0, 50) }}...</small>
                    </td>
                    <td style="color: var(--text-muted);">{{ evenement.dateEvenement ? evenement.dateEvenement|date('d/m/Y') : '-' }}</td>
                    <td style="color: var(--text-muted);">{{ evenement.horaire ? evenement.horaire|date('H:i') : '-' }}</td>
                    <td>
                        <div style="display: flex; gap: 0.5rem;">
                            <a href="{{ path('app_admin_evenement_show', {'id': evenement.idEvenement}) }}" class="btn btn-sm btn-info"><i class="fa-solid fa-eye"></i></a>
                            <a href="{{ path('app_admin_evenement_edit', {'id': evenement.idEvenement}) }}" class="btn btn-sm btn-warning"><i class="fa-solid fa-pen"></i></a>
                        </div>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="5" style="text-align: center; padding: 2rem;">
                        <div style="color: var(--text-muted); margin-bottom: 1rem;">
                            <i class="fa-regular fa-calendar" style="font-size: 2rem;"></i>
                            <p style="margin-top: 0.5rem;">Aucun événement trouvé</p>
                        </div>
                        <a href="{{ path('app_admin_evenement_new') }}" class="btn btn-primary"><i class="fa-solid fa-plus"></i> Créer un événement</a>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
</div>
{% endblock %}
