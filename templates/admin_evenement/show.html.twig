{% extends 'admin_base.html.twig' %}
{% block title %}Détails de l'Événement{% endblock %}
{% block page_title %}Détails de l'Événement{% endblock %}
{% block breadcrumb %}<span>Administration</span> / <a href="{{ path('app_admin_evenement_index') }}">Événements</a> / <span>Détails</span>{% endblock %}
{% block body %}
<div class="card" style="max-width: 800px; margin: 0 auto;">
    <div class="card-header">
        <h2 class="card-title">{{ evenement.nom }}</h2>
        <div style="display: flex; gap: 0.5rem;">
            <a href="{{ path('app_admin_evenement_index') }}" class="btn btn-secondary"><i class="fa-solid fa-arrow-left"></i> Retour</a>
            <a href="{{ path('app_admin_evenement_edit', {'id': evenement.idEvenement}) }}" class="btn btn-warning"><i class="fa-solid fa-pen"></i> Modifier</a>
            {{ include('admin_evenement/_delete_form.html.twig') }}
        </div>
    </div>
    <div style="display: grid; grid-template-columns: 1fr 2fr; gap: 2rem; padding: 1.5rem;">
        <div>
            {% if evenement.images %}
                <img src="{{ asset(evenement.images) }}" alt="{{ evenement.nom }}" style="width: 100%; border-radius: 8px;">
            {% else %}
                <div style="background: var(--background-color); padding: 3rem; text-align: center; border-radius: 8px;">
                    <i class="fa-regular fa-image" style="font-size: 3rem; color: var(--text-muted);"></i>
                </div>
            {% endif %}
        </div>
        <div>
            <table class="table">
                <tbody>
                    <tr><th style="width: 40%;">Nom</th><td>{{ evenement.nom }}</td></tr>
                    <tr><th>Date</th><td>{{ evenement.dateEvenement ? evenement.dateEvenement|date('d/m/Y') : '-' }}</td></tr>
                    <tr><th>Horaire</th><td>{{ evenement.horaire ? evenement.horaire|date('H:i') : '-' }}</td></tr>
                    <tr><th>Description</th><td>{{ evenement.description }}</td></tr>
                </tbody>
            </table>
        </div>
    </div>
</div>
{% endblock %}
