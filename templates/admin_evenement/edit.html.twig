{% extends 'admin_base.html.twig' %}
{% block title %}Modifier l'Événement{% endblock %}
{% block page_title %}Modifier l'Événement{% endblock %}
{% block breadcrumb %}<span>Administration</span> / <a href="{{ path('app_admin_evenement_index') }}">Événements</a> / <span>Modifier</span>{% endblock %}
{% block body %}
<div class="card" style="max-width: 800px; margin: 0 auto;">
    <div class="card-header">
        <h2 class="card-title">Modifier {{ evenement.nom }}</h2>
        <div style="display: flex; gap: 0.5rem;">
            <a href="{{ path('app_admin_evenement_index') }}" class="btn btn-secondary"><i class="fa-solid fa-arrow-left"></i> Retour</a>
            {{ include('admin_evenement/_delete_form.html.twig') }}
        </div>
    </div>

    {% if evenement.images %}
        <div style="padding: 1rem; background: #f8fafc; border-bottom: 1px solid #e2e8f0;">
            <div style="font-weight: 600; margin-bottom: 0.5rem; color: #64748b; font-size: 0.875rem;">
                <i class="fa-solid fa-image"></i> Image actuelle
            </div>
            <div style="display: inline-block; border: 2px solid #e2e8f0; border-radius: 0.5rem; overflow: hidden; background: white;">
                <img src="{{ asset('uploads/evenements/' ~ evenement.images) }}" 
                     alt="{{ evenement.nom }}" 
                     style="max-width: 300px; max-height: 200px; display: block;">
            </div>
            <div style="margin-top: 0.5rem; font-size: 0.75rem; color: #94a3b8;">
                <i class="fa-solid fa-info-circle"></i> Uploadez une nouvelle image pour remplacer celle-ci
            </div>
        </div>
    {% endif %}

    {{ include('admin_evenement/_form.html.twig', {'button_label': 'Mettre à jour'}) }}
</div>
{% endblock %}
