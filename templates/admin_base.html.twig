<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Administration{% endblock %}</title>
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        
        {% block stylesheets %}
            <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
            <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600&display=swap" rel="stylesheet">
            <link rel="stylesheet" href="{{ asset('css/admin.css') }}">
            <link rel="stylesheet" href="{{ asset('css/admin-layout.css') }}">
            <link rel="stylesheet" href="{{ asset('css/admin-dashboard.css') }}">
        {% endblock %}

        {% block javascripts %}
            {# {% block importmap %}{{ importmap('app') }}{% endblock %} #}
            <script src="https://cdn.ckeditor.com/ckeditor5/40.0.0/super-build/ckeditor.js"></script>
            <script>
                document.addEventListener('DOMContentLoaded', () => {
                    document.querySelectorAll('textarea.description-wysiwyg').forEach( (textarea) => {
                        CKEDITOR.ClassicEditor
                            .create(textarea, {
                                ckfinder: {
                                    uploadUrl: '{{ url('app_admin_upload_editor_image') }}'
                                },
                                // Use a strict whitelist of plugins to avoid loading ANY premium/cloud features
                                plugins: [
                                    CKEDITOR.ClassicEditor.builtinPlugins.find(p => p.pluginName === 'Essentials'),
                                    CKEDITOR.ClassicEditor.builtinPlugins.find(p => p.pluginName === 'Autoformat'),
                                    CKEDITOR.ClassicEditor.builtinPlugins.find(p => p.pluginName === 'Bold'),
                                    CKEDITOR.ClassicEditor.builtinPlugins.find(p => p.pluginName === 'Italic'),
                                    CKEDITOR.ClassicEditor.builtinPlugins.find(p => p.pluginName === 'BlockQuote'),
                                    CKEDITOR.ClassicEditor.builtinPlugins.find(p => p.pluginName === 'FontBackgroundColor'),
                                    CKEDITOR.ClassicEditor.builtinPlugins.find(p => p.pluginName === 'FontColor'),
                                    CKEDITOR.ClassicEditor.builtinPlugins.find(p => p.pluginName === 'GeneralHtmlSupport'), // Enable HTML Support
                                    CKEDITOR.ClassicEditor.builtinPlugins.find(p => p.pluginName === 'Heading'),
                                    CKEDITOR.ClassicEditor.builtinPlugins.find(p => p.pluginName === 'Image'),
                                    CKEDITOR.ClassicEditor.builtinPlugins.find(p => p.pluginName === 'ImageCaption'),
                                    CKEDITOR.ClassicEditor.builtinPlugins.find(p => p.pluginName === 'ImageStyle'),
                                    CKEDITOR.ClassicEditor.builtinPlugins.find(p => p.pluginName === 'ImageToolbar'),
                                    CKEDITOR.ClassicEditor.builtinPlugins.find(p => p.pluginName === 'ImageUpload'),
                                    CKEDITOR.ClassicEditor.builtinPlugins.find(p => p.pluginName === 'ImageResize'), // The key feature we want
                                    CKEDITOR.ClassicEditor.builtinPlugins.find(p => p.pluginName === 'Link'),
                                    CKEDITOR.ClassicEditor.builtinPlugins.find(p => p.pluginName === 'List'),
                                    CKEDITOR.ClassicEditor.builtinPlugins.find(p => p.pluginName === 'MediaEmbed'),
                                    CKEDITOR.ClassicEditor.builtinPlugins.find(p => p.pluginName === 'Paragraph'),
                                    CKEDITOR.ClassicEditor.builtinPlugins.find(p => p.pluginName === 'PasteFromOffice'),
                                    CKEDITOR.ClassicEditor.builtinPlugins.find(p => p.pluginName === 'CKFinderUploadAdapter'), // This is the correct adapter for SuperBuild
                                    CKEDITOR.ClassicEditor.builtinPlugins.find(p => p.pluginName === 'Table'),
                                    CKEDITOR.ClassicEditor.builtinPlugins.find(p => p.pluginName === 'TableToolbar'),
                                    CKEDITOR.ClassicEditor.builtinPlugins.find(p => p.pluginName === 'TextTransformation')
                                ],
                                htmlSupport: {
                                    allow: [
                                        {
                                            name: /.*/,
                                            attributes: true,
                                            classes: true,
                                            styles: true
                                        }
                                    ]
                                },
                                image: {
                                    resizeUnit: "%",
                                    resizeOptions: [ 
                                        { name: 'resizeImage:original', value: null, label: 'Original' },
                                        { name: 'resizeImage:25', value: '25', label: '25%' }, 
                                        { name: 'resizeImage:50', value: '50', label: '50%' }, 
                                        { name: 'resizeImage:75', value: '75', label: '75%' } 
                                    ],
                                    toolbar: [
                                        'imageTextAlternative', 'toggleImageCaption', '|',
                                        'imageStyle:inline', 'imageStyle:wrapText', 'imageStyle:breakText', '|',
                                        'resizeImage'
                                    ]
                                },
                                // Ensure standard toolbar items are available
                                toolbar: {
                                    items: [
                                        'heading', '|', 'bold', 'italic', 'fontColor', 'fontBackgroundColor', '|', 'link', 'bulletedList', 'numberedList', 'blockQuote', '|',
                                        'insertTable', 'uploadImage', 'mediaEmbed', '|',
                                        'undo', 'redo'
                                    ],
                                    shouldNotGroupWhenFull: true
                                }
                            })
                            .then(editor => {
                                console.log('Editor initialized correctly', editor);
                            })
                    });
                });
            </script>
        {% endblock %}
    </head>
    <body>
        <button class="admin-sidebar-toggle" id="adminSidebarToggle" aria-label="Menu">
            <i class="fa-solid fa-bars"></i>
        </button>
        <div class="admin-sidebar-overlay" id="adminSidebarOverlay"></div>

        <div class="sidebar" id="adminSidebar">
            <div class="sidebar-header">
                <i class="fa-solid fa-gauge-high"></i> Admin
            </div>

            
            
            <nav class="admin-nav-menu">
                <a href="{{ path('app_admin_dashboard') }}" class="nav-link {% if app.request.get('_route') == 'app_admin_dashboard' %}active{% endif %}">
                    <i class="fa-solid fa-chart-line"></i> Dashboard
                </a>
                
                <a href="{{ path('home') }}" class="nav-link nav-link-site" target="_blank">
                    <i class="fa-solid fa-globe"></i> Voir le site
                </a>

                <div class="nav-section-title">Liens Rapides</div>
                <a href="{{ path('app_admin_produit_index') }}" class="nav-link {% if 'admin_produit' in app.request.get('_route') %}active{% endif %}">
                    <i class="fa-solid fa-box"></i> Produits
                </a>
                <a href="{{ path('app_admin_actualite_index') }}" class="nav-link {% if 'admin_actualite' in app.request.get('_route') %}active{% endif %}">
                    <i class="fa-regular fa-newspaper"></i> Actualités
                </a>
                <a href="{{ path('app_admin_evenement_index') }}" class="nav-link {% if 'admin_evenement' in app.request.get('_route') %}active{% endif %}">
                    <i class="fa-regular fa-calendar"></i> Événements
                </a>
                <a href="{{ path('app_admin_type_evenement_index') }}" class="nav-link {% if 'admin_type_evenement' in app.request.get('_route') %}active{% endif %}">
                    <i class="fa-solid fa-tag"></i> Types d'Événements
                </a>
                <a href="{{ path('app_admin_album_index') }}" class="nav-link {% if 'admin_album' in app.request.get('_route') %}active{% endif %}">
                    <i class="fa-regular fa-images"></i> Albums
                </a>
                <a href="{{ path('app_admin_categorie_album_index') }}" class="nav-link {% if 'admin_categorie_album' in app.request.get('_route') %}active{% endif %}">
                    <i class="fa-solid fa-folder-open"></i> Catégories d'Albums
                </a>
                <a href="{{ path('app_admin_photo_index') }}" class="nav-link {% if 'admin_photo' in app.request.get('_route') %}active{% endif %}">
                    <i class="fa-regular fa-image"></i> Photos
                </a>
                <a href="{{ path('app_admin_utilisateur_index') }}" class="nav-link {% if 'admin_utilisateur' in app.request.get('_route') %}active{% endif %}">
                    <i class="fa-regular fa-user"></i> Utilisateurs
                </a>
                <a href="{{ path('app_admin_faq_index') }}" class="nav-link {% if 'admin_faq' in app.request.get('_route') %}active{% endif %}">
                    <i class="fa-regular fa-circle-question"></i> FAQ
                </a>
                <a href="{{ path('app_admin_partenaires_index') }}" class="nav-link {% if 'admin_partenaires' in app.request.get('_route') %}active{% endif %}">
                    <i class="fa-solid fa-handshake"></i> Partenaires
                </a>
                <a href="{{ path('app_admin_document_index') }}" class="nav-link {% if 'admin_document' in app.request.get('_route') %}active{% endif %}">
                    <i class="fa-solid fa-file-invoice"></i> Documents
                </a>
            </nav>
        </div>

        <div class="main-content">
            <div class="top-bar">                
                <div class="user-menu-wrapper">
                    <div class="user-menu" onclick="toggleUserDropdown()">
                        <span class="user-email">{{ app.user.email|default('Admin') }}</span>
                        <div class="avatar">
                            <i class="fa-solid fa-user"></i>
                        </div>
                        <i class="fa-solid fa-chevron-down dropdown-icon"></i>
                    </div>
                    
                    <div class="user-dropdown" id="userDropdown">
                        <div class="dropdown-header">
                            <div class="dropdown-user-info">
                                <i class="fa-solid fa-user-circle"></i>
                                <div>
                                    <div class="dropdown-email">{{ app.user.email|default('Admin') }}</div>
                                    <div class="dropdown-role">Administrateur</div>
                                </div>
                            </div>
                        </div>
                        <div class="dropdown-divider"></div>
                        <div class="dropdown-divider"></div>
                        <a href="{{ path('app_logout') }}" class="dropdown-item logout">
                            <i class="fa-solid fa-right-from-bracket"></i>
                            <span>Déconnexion</span>
                        </a>
                    </div>
                </div>
            </div>

            {% for label, messages in app.flashes %}
                {% for message in messages %}
                    <div class="alert alert-{{ label }}">
                        {{ message }}
                    </div>
                {% endfor %}
            {% endfor %}

            {% block body %}{% endblock %}
        </div>

        <script>
            function toggleUserDropdown() {
                const dropdown = document.getElementById('userDropdown');
                dropdown.classList.toggle('show');
            }

            // Close dropdown when clicking outside
            document.addEventListener('click', function(event) {
                const userMenu = document.querySelector('.user-menu-wrapper');
                const dropdown = document.getElementById('userDropdown');
                
                if (!userMenu.contains(event.target)) {
                    dropdown.classList.remove('show');
                }
            });

            // Admin sidebar toggle
            (function() {
                const toggle = document.getElementById('adminSidebarToggle');
                const sidebar = document.getElementById('adminSidebar');
                const overlay = document.getElementById('adminSidebarOverlay');

                if (toggle && sidebar && overlay) {
                    toggle.addEventListener('click', function() {
                        sidebar.classList.toggle('open');
                        overlay.classList.toggle('active');
                    });

                    overlay.addEventListener('click', function() {
                        sidebar.classList.remove('open');
                        overlay.classList.remove('active');
                    });

                    // Close sidebar when clicking a nav link on mobile
                    sidebar.querySelectorAll('.nav-link').forEach(function(link) {
                        link.addEventListener('click', function() {
                            if (window.innerWidth <= 768) {
                                sidebar.classList.remove('open');
                                overlay.classList.remove('active');
                            }
                        });
                    });
                }
            })();
        </script>
    </body>
</html>
