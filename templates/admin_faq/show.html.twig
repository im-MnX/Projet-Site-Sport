{% extends 'admin_base.html.twig' %}
{% block title %}Détails de la Question{% endblock %}
{% block page_title %}Détails de la Question{% endblock %}
{% block breadcrumb %}<span>Administration</span> / <a href="{{ path('app_admin_faq_index') }}">FAQ</a> / <span>Détails</span>{% endblock %}
{% block body %}
<div class="card" style="max-width: 800px; margin: 0 auto;">
    <div class="card-header">
        <h2 class="card-title">{{ faq.question }}</h2>
        <div style="display: flex; gap: 0.5rem;">
            <a href="{{ path('app_admin_faq_index') }}" class="btn btn-secondary"><i class="fa-solid fa-arrow-left"></i> Retour</a>
            <a href="{{ path('app_admin_faq_edit', {'id': faq.idFaq}) }}" class="btn btn-warning"><i class="fa-solid fa-pen"></i> Modifier</a>
            {{ include('admin_faq/_delete_form.html.twig') }}
        </div>
    </div>
    <div style="padding: 1.5rem;">
        <table class="table">
            <tbody>
                <tr><th style="width: 30%;">Question</th><td>{{ faq.question }}</td></tr>
                <tr><th>Réponse</th><td>{{ faq.reponse }}</td></tr>
            </tbody>
        </table>
    </div>
</div>
{% endblock %}
